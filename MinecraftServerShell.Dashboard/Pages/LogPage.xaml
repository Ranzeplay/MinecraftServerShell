<Page x:Class="MinecraftServerShell.Dashboard.Pages.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MinecraftServerShell.Dashboard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPage">

    <Grid>
        <TabControl>
            <TabItem Header="Server">
                <Grid>
                    <DataGrid x:Name="ServerLogTable" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Plugin">
                <Grid>
                    <DataGrid x:Name="PluginLogTable" IsReadOnly="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Other">
                <Grid>
                    <DataGrid x:Name="OtherLogTable" IsReadOnly="True"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
